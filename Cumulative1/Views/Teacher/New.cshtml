
@{
    ViewBag.Title = "New";
}

<h2>Add New Teacher</h2>

<form action="/Teacher/Create" method="POST">

    <div class="form-row">
        <label for="fname">First Name:</label>
        <input type="text" id="fname" name="fname" /> <!--MUST USE NAME SO CONTROLLER CAN RECEIVE THE INPUTTED DATA.-->
    </div>

    <div class="form-row">
        <label for="lname">Last Name:</label>
        <input type="text" id="lname" name="lname" />
    </div>

    <div class="form-row">
        <label for="eNum">Employee Number:</label>
        <input type="text" id="eNum" name="eNum" />
    </div>

    <div class="form-row">
        <label for="hireDate">Hire Date:</label>
        <input type="date" id="hireDate" name="hireDate" />
    </div>

    <div class="form-row">
        <label for="salary">Salary:</label>
        <input type="number" id="salary" name="salary" />
    </div>

    <div class="form-row">
        <input type="submit" name="submit" />
    </div>

</form>